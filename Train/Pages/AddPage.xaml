<Page x:Class="Train.Pages.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Train.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Добавление" FontSize="30"/>
            <Label Content="Имя" FontSize="15"/>
            <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="Name" FontSize="25"/>
            <Label Content="Дата рождения" FontSize="15"/>
            <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="Birthday" FontSize="25"/>
            <Label Content="Пол" FontSize="15"/>
            <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="Gender" FontSize="25"/>
            <Button x:Name="AddButton" Content="Добавить" Margin="0,10" Style="{DynamicResource ButtonStyle}" FontSize="25" Click="AddButton_Click"/>
        </StackPanel>
        <Button x:Name="BackButton" Content="Назад" Margin="10" Style="{DynamicResource ButtonStyle}" FontSize="25" VerticalAlignment="Top" HorizontalAlignment="Left" Click="BackButton_Click" />
    </Grid>
</Page>
