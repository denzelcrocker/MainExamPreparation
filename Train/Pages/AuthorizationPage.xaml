<Page x:Class="Train.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Train.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Авторизация" FontSize="30"/>
            <Label Content="Код подразделения" FontSize="15"/>
            <PasswordBox Style="{DynamicResource PasswordBoxStyleBase}" x:Name="Password" FontSize="25"/>
            <Button Style="{DynamicResource ButtonStyle}" x:Name="LogInButton" Content="Войти" FontSize="25" Margin="0,10" Click="LogInButton_Click"/>
        </StackPanel> 
    </Grid>
</Page>
